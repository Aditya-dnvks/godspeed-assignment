{
    "emeraldwalk.runonsave": {
        "commands": [
               {
                   "match": "\\.(yaml|yml|js|json)$",
                   "cmd": "npm run copy"
               },
               {
                "match": "\\.(ts)$",
                "cmd": "npm run build"
            }
        ]
    },
    "files.exclude": {
        "**/gs_service": true,
        "**/node_modules": true,
        "**/package*": true,
        "**/.*": true
    }
}